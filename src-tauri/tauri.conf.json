{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "koine-bros",
  "version": "0.25.1",
  "identifier": "com.github.koine-bros",
  "build": {
    "beforeDevCommand": "pnpm vite:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm vite:build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "koine-bros",
        "label": "main",
        "width": 1000,
        "height": 800,
        "center": true,
        "focus": true,
        "decorations": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/greek-mor.db"]
  }
}
